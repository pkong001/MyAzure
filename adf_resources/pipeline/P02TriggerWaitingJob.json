{
	"name": "P02TriggerWaitingJob",
	"properties": {
		"activities": [
			{
				"name": "Trigger Wait Job",
				"description": "Trigger Waiting Job on the Databrick",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 3,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"method": "POST",
					"headers": {
						"Content-Type": {
							"value": "@variables('content_type')",
							"type": "Expression"
						}
					},
					"url": {
						"value": "@concat(     pipeline().parameters.host_server,     '/api/2.1/jobs/run-now' )",
						"type": "Expression"
					},
					"body": {
						"value": "{\n  \"job_id\": \"@{pipeline().parameters.job_id}\",\n  \"job_parameters\": {\n    \"wait_time\": @{string(variables('wait_time'))}\n  }\n}",
						"type": "Expression"
					},
					"authentication": {
						"type": "MSI",
						"resource": "9f1b49ee-f438-4bf6-a924-98a8173af40d"
					}
				}
			}
		],
		"parameters": {
			"host_server": {
				"type": "string",
				"defaultValue": "https://adb-1346410883415134.14.azuredatabricks.net"
			},
			"job_id": {
				"type": "string",
				"defaultValue": "923521278098169"
			}
		},
		"variables": {
			"job_status": {
				"type": "String",
				"defaultValue": "Running"
			},
			"content_type": {
				"type": "String",
				"defaultValue": "application/json"
			},
			"wait_time": {
				"type": "Integer",
				"defaultValue": 10
			}
		},
		"annotations": []
	}
}